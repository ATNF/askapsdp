Cimager.dataset                	= [10uJy.ms]

Cimager.Images.Names			= [image.i.10uJy]
Cimager.Images.image.i.10uJy.shape		= [4096,4096]
Cimager.Images.image.i.10uJy.cellsize	= [4.5arcsec, 4.5arcsec]
Cimager.Images.image.i.10uJy.frequency	= [1.164e9, 1.420e9]
Cimager.Images.image.i.10uJy.nchan		= 1
Cimager.Images.image.i.10uJy.direction	= [12h30m00.00, -45.00.00.00, J2000]

Cimager.gridder                         = WProject
Cimager.gridder.WProject.wmax           = 15000
Cimager.gridder.WProject.oversample     	= 8
Cimager.gridder.WProject.nwplanes       = 256
Cimager.gridder.WProject.cutoff     	= 0.001
Cimager.gridder.WProject.maxsupport	= 512

#Cimager.gridder                          	= AProjectWStack
Cimager.gridder.AProjectWStack.wmax            	= 15000
Cimager.gridder.AProjectWStack.nwplanes        	= 64
Cimager.gridder.AProjectWStack.oversample     	= 8
Cimager.gridder.AProjectWStack.diameter		= 12m
Cimager.gridder.AProjectWStack.blockage		= 1.2m
Cimager.gridder.AProjectWStack.cutoff     	= 0.001
Cimager.gridder.AProjectWStack.maxfeeds		= 1
Cimager.gridder.AProjectWStack.maxsupport		= 512

#Cimager.gridder                          	= AWProject
Cimager.gridder.AWProject.wmax            	= 15000
Cimager.gridder.AWProject.nwplanes        	= 64
Cimager.gridder.AWProject.oversample     	= 8
Cimager.gridder.AWProject.diameter		= 12m
Cimager.gridder.AWProject.blockage		= 1.2m
Cimager.gridder.AWProject.cutoff     	= 0.001
Cimager.gridder.AWProject.maxfeeds		= 1
Cimager.gridder.AWProject.maxsupport		= 512

Cimager.solver                           	= Clean
Cimager.solver.Dirty.cycles                     = 1
Cimager.solver.Dirty.threshold			= 10%
Cimager.solver.Dirty.verbose                   	= True

Cimager.solver.Clean.algorithm                 	= MultiScale
Cimager.solver.Clean.niter                     	= 100
Cimager.solver.Clean.gain                      	= 0.7
Cimager.solver.Clean.cycles                    	= 3
Cimager.solver.Clean.threshold                	= 1mJy
Cimager.solver.Clean.verbose                   	= True

Cimager.restore                          	= True
Cimager.restore.beam                     	= [30arcsec, 30arcsec, 0deg]
