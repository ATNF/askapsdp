#!/bin/bash -l
#PBS -l nodes=2:ppn=1
#PBS -N stdtest
#PBS -m e
#PBS -v CONRAD_PROJECT_ROOT
cd $PBS_O_WORKDIR

module load openmpi

echo "Extracting 10uJy model" > stdtest.$PBS_JOBID.out

tar zxvf ${CONRAD_PROJECT_ROOT}/Code/Components/Synthesis/testdata/trunk/simulation/models/10uJy.model.small.tgz >> stdtest.$PBS_JOBID.out

export AIPSPATH=${CONRAD_PROJECT_ROOT}/Code/Components/Synthesis/testdata/trunk

echo "Running csimulator to create MeasurementSet for a single pointing" >> stdtest.$PBS_JOBID.out
mpirun -x AIPSPATH time ${CONRAD_PROJECT_ROOT}/Code/Components/Synthesis/synthesis/trunk/bin/csimulator.sh -inputs stdtest.in >> stdtest.$PBS_JOBID.out

echo "Running cimager to form Clean image of single pointing" >> stdtest.$PBS_JOBID.out
mpirun -x AIPSPATH time ${CONRAD_PROJECT_ROOT}/Code/Components/Synthesis/synthesis/trunk/bin/cimager.sh -inputs stdtest.in >> stdtest.$PBS_JOBID.out
