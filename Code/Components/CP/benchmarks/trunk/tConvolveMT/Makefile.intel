# Need the run the following to setup the environment:
# . /opt/intel/Compiler/11.0/074/bin/iccvars.sh intel64
# . /opt/intel/mkl/10.1.1.019/tools/environment/mklvarsem64t.sh
#
CXX=icpc
CFLAGS=-O3 -xS -ip -ipo -DUSEMKLLIB -DUSEBLAS
LIBS=-lmkl -liomp5 -lpthread

EXENAME = tConvolveMT
OBJS = tConvolveMT.o Stopwatch.o

all:		$(EXENAME)

%.o:		%.cc %.h
		$(CXX) $(CFLAGS) -c $<

$(EXENAME):	$(OBJS)
		$(CXX) $(CFLAGS) -o $(EXENAME) $(OBJS) $(LIBS)

clean:
		rm -f $(EXENAME) *.o
