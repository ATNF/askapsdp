tasks.MergedSource.params.n_channels.1              = 8208

#
# CalcUVWTask
#
tasks.CalcUVWTask.type                  = CalcUVWTask

#
# ChannelAvgTask
#
tasks.ChannelAvgTask.type               = ChannelAvgTask
