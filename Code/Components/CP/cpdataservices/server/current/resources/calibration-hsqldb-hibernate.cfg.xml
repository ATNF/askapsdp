<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>

        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:baseball</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.HashtableCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create-drop</property>

        <!-- Enables autocommit for JDBC pooled connections -->
        <property name="hibernate.connection.autocommit">true</property>
        
        <!-- Set the JDBC batch size -->
        <property name="hibernate.jdbc.batch_size">20</property>

		<mapping resource="askap/cp/caldatasvc/persist/GainSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/caldatasvc/persist/GainSolutionElementBean.hbm.xml"/>
		<mapping resource="askap/cp/caldatasvc/persist/LeakageSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/caldatasvc/persist/LeakageSolutionElementBean.hbm.xml"/>
		<mapping resource="askap/cp/caldatasvc/persist/BandpassSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/caldatasvc/persist/BandpassSolutionElementBean.hbm.xml"/>

    </session-factory>

</hibernate-configuration>
