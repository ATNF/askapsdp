<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="askap.interfaces.calparams">

	<class name="FrequencyDependentJTerm" table="freq_depend_jterm">
		<id type="long" column="id">
			<generator class="native" />
		</id>
		
		<property name="nChan" type="integer" access="field" column="n_chan" />

		<list name="bandpass" access="field" table="bandpass_sequence">
			<!-- The key column relates the element back to the solution -->
			<key column="parent_id" />

			<!-- The list-index uniquely identifies the element -->
			<list-index column="id" />

			<one-to-many class="askap.interfaces.calparams.JonesJTerm" />
		</list>

	</class>

</hibernate-mapping>

