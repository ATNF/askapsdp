<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/calibraton</property>
        <property name="connection.username">calibration</property>
        <property name="connection.password">askap</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>
        
        <!-- Set the JDBC batch size -->
        <property name="hibernate.jdbc.batch_size">20</property>

		<mapping resource="askap/cp/calds/persist/GainSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/calds/persist/GainSolutionElementBean.hbm.xml"/>
		<mapping resource="askap/cp/calds/persist/LeakageSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/calds/persist/LeakageSolutionElementBean.hbm.xml"/>
		<mapping resource="askap/cp/calds/persist/BandpassSolutionBean.hbm.xml"/>
		<mapping resource="askap/cp/calds/persist/BandpassSolutionElementBean.hbm.xml"/>

    </session-factory>

</hibernate-configuration>
