<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="askap.interfaces.skymodelservice">

    <class name="Component" table="components">
        <id name="id" type="long" column="ID">
            <generator class="native"/>
        </id>
        <property name="rightAscension" type="double" column="right_ascension"/>
        <property name="declination" type="double" column="declination"/>
        <property name="positionAngle" type="double" column="position_angle"/>
        <property name="majorAxis" type="double" column="major_axis"/>
        <property name="minorAxis" type="double" column="minor_axis"/>
        <property name="i1400" type="double" column="i1400"/>
        
    </class>

</hibernate-mapping>
