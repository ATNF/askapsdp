<icegrid>
    <application name="skymodelservice">
        <node name="Node1">
            <server id="SkyModelService"
                exe="java"
                activation="always">
                <env>CLASSPATH=$ASKAP_ROOT/Code/Components/CP/skymodelservice/server/current/skymodelservice.jar:$CLASSPATH</env>
                <option>askap/cp/sms/Server</option>
                <adapter name="AdminAdapter"
                    id="SkyModelServiceAdminAdapter"
                    endpoints="tcp">
                    <object identity="SkyModelServiceAdmin"
                        type="askap::interfaces::component::IComponent"/>
                    <object identity="SkyModelService"
                        type="askap::interfaces::cp::ISkyModelService"/>
                </adapter>
            </server>
        </node>
    </application>
</icegrid>
