<icegrid>
    <application name="caldataservice">
        <node name="Node1">
            <server id="CalibrationDataService"
                exe="java"
                activation="always">
                <option>askap/cp/calds/Server</option>
                <adapter name="AdminAdapter"
                    id="CalibrationDataServiceAdminAdapter"
                    endpoints="tcp">
                    <object identity="CalibrationDataServiceAdmin"
                        type="askap::interfaces::component::IComponent"/>
                    <object identity="CalibrationDataService"
                        type="askap::interfaces::cp::ICalibrationDataService"/>
                </adapter>
                <properties>
                    <property name="Ice.MessageSizeMax" value="131072"/>
                </properties>
            </server>
        </node>
    </application>
</icegrid>
