<icegrid>
    <application name="cpmanager">
        <node name="Node1">
            <server id="CpManager"
                exe="cpmanager.sh"
                activation="always">
                <env>PATH=$PATH:$ASKAP_ROOT/Code/Components/CP/manager/trunk/apps</env>
                <adapter name="CentralProcessorAdapter"
                    id="CentralProcessor"
                    endpoints="tcp">
                <object identity="CentralProcessorAdmin"
                    type="askap::interfaces::component::IComponent"/>
            </adapter>
            </server>
        </node>
    </application>
</icegrid>

