<icegrid>
    <application name="cpmanager">
        <node name="Node1">
            <server id="CpManager"
                exe="cpmanager.sh"
                activation="always">
                <env>PATH=$PATH:$ASKAP_ROOT/Code/Components/CP/manager/cpp-version/apps</env>
                <adapter name="AdminAdapter"
                    id="CentralProcessorAdminAdapter"
                    endpoints="tcp">
                    <object identity="CentralProcessorAdmin"
                        type="askap::interfaces::component::IComponent"/>
                    <object identity="CentralProcessorService"
                        type="askap::interfaces::cp::ICPObsService"/>
                </adapter>
            </server>
        </node>
    </application>
</icegrid>

