<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="askap.interfaces.skymodelservice">

    <class name="Component" table="components">
        <id name="id" type="long" access="field" column="id">
            <generator class="native"/>
        </id>
        <property name="rightAscension" type="double" access="field" column="right_ascension" />
        <property name="declination" type="double" access="field" column="declination"/>
        <property name="positionAngle" type="double" access="field" column="position_angle"/>
        <property name="majorAxis" type="double" access="field" column="major_axis"/>
        <property name="minorAxis" type="double" access="field" column="minor_axis"/>
        <property name="i1400" type="double" access="field" column="i1400"/>
        <property name="spectralIndex" type="double" access="field" column="spectral_index"/>
        <property name="spectralCurvature" type="double" access="field" column="spectral_curvature"/>

    </class>

</hibernate-mapping>

